{
  "name": "local-brain",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "cd server && uvicorn main:app --reload --host 127.0.0.1 --port 8000",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm dev:server\" -n \"frontend,backend\" -c \"cyan,yellow\"",
    "build": "vite build",
    "preview": "vite preview",
    "start": "cd server && python3 main.py"
  },
  "keywords": [
    "local-brain",
    "second-brain",
    "rag",
    "ollama",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "description": "Local RAG PWA Application with Ollama",
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "vite": "^7.1.11"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4"
  }
}
