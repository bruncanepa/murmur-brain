{
  "name": "murmur-brain",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "cd server && uvicorn main:app --reload --host 127.0.0.1 --port 8000",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm dev:server\" -n \"frontend,backend\" -c \"cyan,yellow\"",
    "build": "vite build",
    "build:exe": "python3 build-all.py",
    "build:macos": "python3 build-all.py --macos",
    "build:windows": "python3 build-all.py --windows",
    "build:linux": "python3 build-all.py --linux",
    "build:all": "python3 build-all.py --all",
    "build:clean": "python3 build-all.py --clean",
    "preview": "vite preview",
    "start": "cd server && python3 main.py",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "validate": "pnpm type-check && pnpm lint && pnpm format:check",
    "migrate:up": "python3 server/migrate.py up",
    "migrate:down": "python3 server/migrate.py down",
    "migrate:status": "python3 server/migrate.py status",
    "migrate:new": "python3 server/migrate.py new",
    "migrate:history": "python3 server/migrate.py history"
  },
  "keywords": [
    "murmur-brain",
    "second-brain",
    "rag",
    "ollama",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "description": "Privacy-first local AI for talking to your documents - No internet, no third parties",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.11"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4"
  }
}
